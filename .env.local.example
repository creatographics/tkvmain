# TKV Creatographics CRM - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# OPTION 1: Local PostgreSQL Database (Docker)
# ============================================
DATABASE_URL=postgresql://crm_user:crm_password@localhost:5432/crm_database

# ============================================
# OPTION 2: Supabase (Cloud or Local)
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api
# Or from: supabase start (for local)

NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================
# Email Configuration (Optional)
# ============================================
EMAIL_FROM=noreply@tkvcreatographics.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ============================================
# WhatsApp Configuration (Optional)
# ============================================
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER=your_phone_number

# ============================================
# Application Settings
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
